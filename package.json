{
  "name": "todo-rest-api",
  "version": "1.0.0",
  "description": "A dockerized full stack todo application that uses a NodeJS backend, a PostgreSQL database, Prisma as ORM and JWT Authentication",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "start-server": "node dist/server.js",
    "start-dev-server": "tsc-watch --onSuccess \"node dist/server.js 9003\"",
    "dev": "npm-run-all clean build start-dev-server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "winston": "^3.19.0"
  }
}










